<?xml version="1.0" encoding="UTF-8"?>
<sml:SensorML xmlns:gml="http://www.opengis.net/gml" xmlns:sml="http://www.opengis.net/sensorML/1.0" xmlns:swe="http://www.opengis.net/swe/1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xlink="http://www.w3.org/1999/xlink" xsi:schemaLocation="http://www.opengis.net/sensorML/1.0 file:///D:/Sensia/Projects/SensorML/Schema/sensorML/sensorML.xsd" version="1.0">
   <sml:member>
      <sml:ProcessChain gml:id="LOOKRAY_PROCESS">
         <sml:inputs>
            <sml:InputList>
               <sml:input name="time">
                  <swe:DataRecord>
                     <swe:field name="start">
                        <swe:Time definition="urn:ogc:def:phenomenon:time" referenceFrame="urn:ogc:def:crs:julianTime">
                           <swe:uom code="s"/>
                        </swe:Time>
                     </swe:field>
                     <swe:field name="stop">
                        <swe:Time definition="urn:ogc:def:phenomenon:time" referenceFrame="urn:ogc:def:crs:julianTime">
                           <swe:uom code="s"/>
                        </swe:Time>
                     </swe:field>
                     <swe:field name="step">
                        <swe:Quantity definition="urn:ogc:def:phenomenon:duration">
                           <swe:uom code="s"/>
                        </swe:Quantity>
                     </swe:field>
                  </swe:DataRecord>
               </sml:input>
            </sml:InputList>
         </sml:inputs>
         <sml:outputs>
            <sml:OutputList>
               <sml:output name="ECEF_location">
                  <swe:Vector definition="urn:ogc:def:data:locationVector" referenceFrame="urn:ogc:def:crs:ECEF_wgs84">
                     <swe:coordinate name="x">
                        <swe:Quantity>
                           <swe:uom code="m"/>
                        </swe:Quantity>
                     </swe:coordinate>
                     <swe:coordinate name="y">
                        <swe:Quantity>
                           <swe:uom code="m"/>
                        </swe:Quantity>
                     </swe:coordinate>
                     <swe:coordinate name="z">
                        <swe:Quantity>
                           <swe:uom code="m"/>
                        </swe:Quantity>
                     </swe:coordinate>
                  </swe:Vector>
               </sml:output>
               <sml:output name="ECEF_ground">
                  <swe:Vector definition="urn:ogc:def:data:viewVector" referenceFrame="urn:ogc:def:crs:ECEF_wgs84">
                     <swe:coordinate name="x">
                        <swe:Quantity>
                           <swe:uom code="m"/>
                        </swe:Quantity>
                     </swe:coordinate>
                     <swe:coordinate name="y">
                        <swe:Quantity>
                           <swe:uom code="m"/>
                        </swe:Quantity>
                     </swe:coordinate>
                     <swe:coordinate name="z">
                        <swe:Quantity>
                           <swe:uom code="m"/>
                        </swe:Quantity>
                     </swe:coordinate>
                  </swe:Vector>
               </sml:output>
            </sml:OutputList>
         </sml:outputs>
         <sml:components>
            <sml:ComponentList>
               <!-- FOR loop for along scan steps -->
               <sml:component name="asCounter">
                  <sml:ProcessModel>
                     <sml:inputs>
                        <sml:InputList>
                           <sml:input name="pass-through">
                              <swe:DataRecord>
                                 <swe:field name="Scan_time">
                                    <swe:Quantity/>
                                 </swe:field>
                              </swe:DataRecord>
                           </sml:input>
                           <sml:input name="countingRange">
                              <swe:DataRecord>
                                 <swe:field name="start">
                                    <swe:Quantity>
                                       <swe:value>1</swe:value>
                                    </swe:Quantity>
                                 </swe:field>
                                 <swe:field name="stop">
                                    <swe:Quantity>
                                       <swe:value>256</swe:value>
                                    </swe:Quantity>
                                 </swe:field>
                                 <swe:field name="stepCount">
                                    <swe:Quantity>
                                       <swe:value>10</swe:value>
                                    </swe:Quantity>
                                 </swe:field>
                              </swe:DataRecord>
                           </sml:input>
                        </sml:InputList>
                     </sml:inputs>
                     <sml:outputs>
                        <sml:OutputList>
                           <sml:output name="pass-through">
                              <swe:DataRecord>
                                 <swe:field name="Scan_time">
                                    <swe:Quantity/>
                                 </swe:field>
                              </swe:DataRecord>
                           </sml:output>
                           <sml:output name="count">
                              <swe:DataRecord>
                                 <swe:field name="variable">
                                    <swe:Quantity gml:id="AS_PIXEL"/>
                                 </swe:field>
                                 <swe:field name="index">
                                    <swe:Count/>
                                 </swe:field>
                              </swe:DataRecord>
                           </sml:output>
                           <sml:output name="stepCount">
                              <swe:Count/>
                           </sml:output>
                        </sml:OutputList>
                     </sml:outputs>
                     <sml:method xlink:href="urn:ogc:def:process:counter:1.0"/>
                  </sml:ProcessModel>
               </sml:component>
               <!--~~~~~~~~~~~~~~~~~~~~-->
               <!-- Binary arithmeric to determine duration of swath -->
               <!--~~~~~~~~~~~~~~~~~~~~-->
               <sml:component name="BinaryStopMinusStartTime">
                  <sml:ProcessModel>
                     <sml:inputs>
                        <sml:InputList>
                           <sml:input name="operand1">
                              <swe:Quantity/>
                           </sml:input>
                           <sml:input name="operand2">
                              <swe:Quantity/>       
                           </sml:input>
                        </sml:InputList>
                     </sml:inputs>
                     <sml:outputs>
                        <sml:OutputList>
                           <sml:output name="result">
                              <swe:Quantity/>
                           </sml:output>
                        </sml:OutputList>
                     </sml:outputs>
                     <sml:parameters>
                        <sml:ParameterList>
                           <sml:parameter name="operator">
                              <swe:Category>
                                 <swe:value>soustraction</swe:value>
                              </swe:Category>
                           </sml:parameter>
                        </sml:ParameterList>
                     </sml:parameters>
                     <sml:method xlink:href="urn:vast:def:process:binaryOperation:1.0"/>
                  </sml:ProcessModel>
               </sml:component>
               <!--~~~~~~~~~~~~~~~~~~~~-->
               <!-- Binary arithmeric to determine total number of frames in swath -->
               <!--~~~~~~~~~~~~~~~~~~~~-->
               <sml:component name="BinaryFrameTotal">
                  <sml:ProcessModel>
                     <sml:inputs>
                        <sml:InputList>
                           <sml:input name="operand1">
                              <swe:Quantity/>
                           </sml:input>
                           <sml:input name="operand2">
                              <swe:Quantity>
                                 <swe:value>0.004476275</swe:value>
                              </swe:Quantity>  
                           </sml:input>
                        </sml:InputList>
                     </sml:inputs>
                     <sml:outputs>
                        <sml:OutputList>
                           <sml:output name="result">
                              <swe:Quantity/>
                           </sml:output>
                        </sml:OutputList>
                     </sml:outputs>
                     <sml:parameters>
                        <sml:ParameterList>
                           <sml:parameter name="operator">
                              <swe:Category>
                                 <swe:value>division</swe:value>
                              </swe:Category>
                           </sml:parameter>
                        </sml:ParameterList>
                     </sml:parameters>
                     <sml:method xlink:href="urn:vast:def:process:binaryOperation:1.0"/>
                  </sml:ProcessModel>
               </sml:component>
               <!--~~~~~~~~~~~~~~~~~~~~-->
               <!-- Binary arithmeric to add pointing angle to scan angle -->
               <!--~~~~~~~~~~~~~~~~~~~~-->
               <sml:component name="BinaryFramePerSwath">
                  <sml:ProcessModel>
                     <sml:inputs>
                        <sml:InputList>
                           <sml:input name="operand1">
                              <swe:Quantity/>
                           </sml:input>
                           <sml:input name="operand2">
                              <swe:Quantity/>                                
                           </sml:input>
                        </sml:InputList>
                     </sml:inputs>
                     <sml:outputs>
                        <sml:OutputList>
                           <sml:output name="result">
                              <swe:Quantity/>
                           </sml:output>
                        </sml:OutputList>
                     </sml:outputs>
                     <sml:parameters>
                        <sml:ParameterList>
                           <sml:parameter name="operator">
                              <swe:Category>
                                 <swe:value>division</swe:value>
                              </swe:Category>
                           </sml:parameter>
                        </sml:ParameterList>
                     </sml:parameters>
                     <sml:method xlink:href="urn:vast:def:process:binaryOperation:1.0"/>
                  </sml:ProcessModel>
               </sml:component>
               <!-- FOR loop for across track steps -->
               <sml:component name="frameCounter">
                  <sml:ProcessModel>
                     <sml:inputs>
                        <sml:InputList>
                           <sml:input name="pass-through">
                              <swe:DataRecord>
                                 <swe:field name="Scan_time">
                                    <swe:Quantity/>
                                 </swe:field>
                                 <swe:field name="Along_scan_pixel" xlink:href="#AS_PIXEL"/>
                              </swe:DataRecord>
                           </sml:input>
                           <sml:input name="countingRange">
                              <swe:DataRecord>
                                 <swe:field name="start">
                                    <swe:Quantity>
                                       <swe:value>0.0</swe:value>
                                    </swe:Quantity>
                                 </swe:field>
                                 <swe:field name="stop">
                                    <swe:Quantity/>                                    
                                 </swe:field>
                                 <swe:field name="stepCount">
                                    <swe:Quantity/>                                   
                                 </swe:field>
                              </swe:DataRecord>
                           </sml:input>
                        </sml:InputList>
                     </sml:inputs>
                     <sml:outputs>
                        <sml:OutputList>
                           <sml:output name="pass-through">
                              <swe:DataRecord>
                                 <swe:field name="Scan_time">
                                    <swe:Quantity/>
                                 </swe:field>
                                 <swe:field name="Along_scan_pixel" xlink:href="#AS_PIXEL"/>
                              </swe:DataRecord>
                           </sml:output>
                           <sml:output name="count">
                              <swe:DataRecord>
                                 <swe:field name="variable">
                                    <swe:Quantity/>
                                 </swe:field>
                                 <swe:field name="index">
                                    <swe:Count/>
                                 </swe:field>
                              </swe:DataRecord>
                           </sml:output>
                           <sml:output name="stepCount">
                              <swe:Count/>
                           </sml:output>
                        </sml:OutputList>
                     </sml:outputs>
                     <sml:method xlink:href="urn:ogc:def:process:counter:1.0"/>
                  </sml:ProcessModel>
               </sml:component>
               <!-- Actual chain doing the geolocation job -->
               <sml:component name="lookVectorChain" xlink:href="./HYPERION.xml#HYPERION_GEOLOCATION"/>
               <!-- Intersection w/ Ellipsoid -->
               <sml:component name="rayIntersectEllipsoid">
                  <sml:ProcessModel>
                     <sml:inputs>
                        <sml:InputList>
                           <sml:input name="rayOrigin">
                              <swe:Vector definition="urn:ogc:def:data:locationVector">
                                 <swe:coordinate name="x">
                                    <swe:Quantity>
                                       <swe:uom code="m"/>
                                    </swe:Quantity>
                                 </swe:coordinate>
                                 <swe:coordinate name="y">
                                    <swe:Quantity>
                                       <swe:uom code="m"/>
                                    </swe:Quantity>
                                 </swe:coordinate>
                                 <swe:coordinate name="z">
                                    <swe:Quantity>
                                       <swe:uom code="m"/>
                                    </swe:Quantity>
                                 </swe:coordinate>
                              </swe:Vector>
                           </sml:input>
                           <sml:input name="rayDirection">
                              <swe:Vector definition="urn:ogc:def:data:directionVector">
                                 <swe:coordinate name="x">
                                    <swe:Quantity>
                                       <swe:uom code="m"/>
                                    </swe:Quantity>
                                 </swe:coordinate>
                                 <swe:coordinate name="y">
                                    <swe:Quantity>
                                       <swe:uom code="m"/>
                                    </swe:Quantity>
                                 </swe:coordinate>
                                 <swe:coordinate name="z">
                                    <swe:Quantity>
                                       <swe:uom code="m"/>
                                    </swe:Quantity>
                                 </swe:coordinate>
                              </swe:Vector>
                           </sml:input>
                        </sml:InputList>
                     </sml:inputs>
                     <sml:outputs>
                        <sml:OutputList>
                           <sml:output name="intersection">
                              <swe:Vector definition="urn:ogc:def:data:locationVector">
                                 <swe:coordinate name="x">
                                    <swe:Quantity>
                                       <swe:uom code="m"/>
                                    </swe:Quantity>
                                 </swe:coordinate>
                                 <swe:coordinate name="y">
                                    <swe:Quantity>
                                       <swe:uom code="m"/>
                                    </swe:Quantity>
                                 </swe:coordinate>
                                 <swe:coordinate name="z">
                                    <swe:Quantity>
                                       <swe:uom code="m"/>
                                    </swe:Quantity>
                                 </swe:coordinate>
                              </swe:Vector>
                           </sml:output>
                        </sml:OutputList>
                     </sml:outputs>
                     <sml:method xlink:href="urn:ogc:def:process:rayIntersectEllipsoid:1.0"/>
                  </sml:ProcessModel>
               </sml:component>
            </sml:ComponentList>
         </sml:components>
         <sml:connections>
            <sml:ConnectionList>
               <sml:connection>
                  <sml:Link>
                     <sml:source ref="this/inputs/time/start"/>
                     <sml:destination ref="asCounter/inputs/pass-through/Scan_time"/>
                  </sml:Link>
               </sml:connection>
               <sml:connection>
                  <sml:Link>
                     <sml:source ref="asCounter/outputs/pass-through/Scan_time"/>
                     <sml:destination ref="frameCounter/inputs/pass-through/Scan_time"/>
                  </sml:Link>
               </sml:connection>
               <sml:connection>
                  <sml:Link>
                     <sml:source ref="frameCounter/outputs/pass-through/Scan_time"/>
                     <sml:destination ref="lookVectorChain/inputs/swathStartTime"/>
                  </sml:Link>
               </sml:connection>
               <!-- -->
               <sml:connection>
                  <sml:Link>
                     <sml:source ref="asCounter/outputs/count/variable"/>
                     <sml:destination ref="frameCounter/inputs/pass-through/Along_scan_pixel"/>
                  </sml:Link>
               </sml:connection>               
               <sml:connection>
                  <sml:Link>
                     <sml:source ref="frameCounter/outputs/pass-through/Along_scan_pixel"/>
                     <sml:destination ref="lookVectorChain/inputs/pixel"/>
                  </sml:Link>
               </sml:connection>
               <!-- -->
               <sml:connection>
                  <sml:Link>
                     <sml:source ref="this/inputs/time/stop"/>
                     <sml:destination ref="BinaryStopMinusStartTime/inputs/operand1"/>
                  </sml:Link>
               </sml:connection>
               <sml:connection>
                  <sml:Link>
                     <sml:source ref="this/inputs/time/start"/>
                     <sml:destination ref="BinaryStopMinusStartTime/inputs/operand2"/>
                  </sml:Link>
               </sml:connection>
               <sml:connection>
                  <sml:Link>
                     <sml:source ref="BinaryStopMinusStartTime/outputs/result"/>
                     <sml:destination ref="BinaryFrameTotal/inputs/operand1"/>
                  </sml:Link>
               </sml:connection>
               <sml:connection>
                  <sml:Link>
                     <sml:source ref="BinaryFrameTotal/outputs/result"/>
                     <sml:destination ref="frameCounter/inputs/countingRange/stop"/>
                  </sml:Link>
               </sml:connection>
               <sml:connection>
                  <sml:Link>
                     <sml:source ref="BinaryStopMinusStartTime/outputs/result"/>
                     <sml:destination ref="BinaryFramePerSwath/inputs/operand1"/>
                  </sml:Link>
               </sml:connection>
               <sml:connection>
                  <sml:Link>
                     <sml:source ref="this/inputs/time/step"/>
                     <sml:destination ref="BinaryFramePerSwath/inputs/operand2"/>
                  </sml:Link>
               </sml:connection>
               <sml:connection>
                  <sml:Link>
                     <sml:source ref="BinaryFramePerSwath/outputs/result"/>
                     <sml:destination ref="frameCounter/inputs/countingRange/stepCount"/>
                  </sml:Link>
               </sml:connection>
               <sml:connection>
                  <sml:Link>
                     <sml:source ref="frameCounter/outputs/count/variable"/>
                     <sml:destination ref="lookVectorChain/inputs/frame"/>
                  </sml:Link>
               </sml:connection>
               <!-- -->               
               <sml:connection>
                  <sml:Link>
                     <sml:source ref="lookVectorChain/outputs/geolocationData/ECEF_view_vector"/>
                     <sml:destination ref="rayIntersectEllipsoid/inputs/rayDirection"/>
                  </sml:Link>
               </sml:connection>
               <sml:connection>
                  <sml:Link>
                     <sml:source ref="lookVectorChain/outputs/geolocationData/ECEF_location"/>
                     <sml:destination ref="rayIntersectEllipsoid/inputs/rayOrigin"/>
                  </sml:Link>
               </sml:connection>
               <!-- -->
               <sml:connection>
                  <sml:Link>
                     <sml:source ref="lookVectorChain/outputs/geolocationData/ECEF_location"/>
                     <sml:destination ref="this/outputs/ECEF_location"/>
                  </sml:Link>
               </sml:connection>
               <sml:connection>
                  <sml:Link>
                     <sml:source ref="rayIntersectEllipsoid/outputs/intersection"/>
                     <sml:destination ref="this/outputs/ECEF_ground"/>
                  </sml:Link>
               </sml:connection>
               <!-- -->
            </sml:ConnectionList>
         </sml:connections>
      </sml:ProcessChain>
   </sml:member>
</sml:SensorML>
